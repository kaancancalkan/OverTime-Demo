<c:FragmentDefinition
 xmlns="sap.m"
 xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
>

<Dialog
  
   
    icon="sap-icon://account"
   
    title="Leave Request"
    id="RequestDialog"
    afterClose="onDialogAfterClose"
>
 <customHeader>
        <Bar>
            <contentMiddle>
                <Title text="Leave Request" />
            </contentMiddle>
            <contentRight>
                <Button
                    icon="sap-icon://decline"
                    press="onCloseDialog"
                />
            </contentRight>
        </Bar>
    </customHeader>
<Table items="{LeaveRequestModel>/SelectedRowRequest}" id="RequestTable">
    <columns>
        <Column>
            <Text text="Employee Number" />
        </Column>
        <Column>
            <Text text="Date" />
        </Column>
        <Column>
            <Text text="Explanation" />
        </Column>
        <!-- Add other columns as necessary -->
    </columns>
    <items>
        <ColumnListItem>
            <cells>
                <Text text="{LeaveRequestModel>Pernr}" />
                <Text text="{LeaveRequestModel>Datum}" />
                <Text text="{LeaveRequestModel>Expln}" />
                <!-- Add other cells as necessary -->
            </cells>
        </ColumnListItem>
    </items>
</Table>
</Dialog>
 
</c:FragmentDefinition>