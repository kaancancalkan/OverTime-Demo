<c:FragmentDefinition
 xmlns="sap.m"
 xmlns:c="sap.ui.core"
    xmlns:core="sap.ui.core"
>

<Dialog
  
   
    icon="sap-icon://account"
   
    title="Leave Request"
    id="RequestDialog"
    
>
 <customHeader>
        <Bar>
            <contentMiddle>
                <Title text="Leave Request" />
            </contentMiddle>
            <contentRight>
                <Button
                    icon="sap-icon://decline"
                    press="onCloseDialog"
                />
            </contentRight>
        </Bar>
    </customHeader>
<Table items="{LeaveRequestModel>/SelectedRowRequest}" id="RequestTable">
                <columns>
                    <Column>
                       <Text text="Employee Number" />
                    </Column>
                 
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                <Text text="{LeaveRequestModel>Pernr}" />
                           
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
   
</Dialog>
 
</c:FragmentDefinition>